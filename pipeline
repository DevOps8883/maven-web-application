pipeline {
    agent any

    environment {
        // Define sensitive data securely using Jenkins credentials
        TOMCAT_URL = 'http://18.133.74.90:8080'
        DEPLOY_PATH = '/maven-web-application'  // Change this to your app context path
        WAR_FILE = 'target/maven-web-application.war'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/DevOps8883/maven-web-application.git', branch: 'master'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
        }

        stage('qa of the code') {
            steps {
                sh 'mvn pmd:pmd || true'

            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Deploy to Tomcat') {
            environment {
                // Fetch Jenkins credentials securely
                TOMCAT_CRED = credentials('tomcat-manager-creds') // Jenkins credentials ID
            }
            steps {
                script {
                    def warFile = sh(script: "ls target/*.war", returnStdout: true).trim()
                    sh """
                     curl --upload-file target/*.war "http://admin:admin123@18.133.74.90:8080/manager/text/deploy?path=/maven-web-application&update=true"
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'üéâ Deployment completed successfully!'
        }
        failure {
            echo '‚ùå Build or deployment failed.'
        }
    }
}
